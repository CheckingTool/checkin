<!DOCTYPE html>
<html>
  <head>
    <title>CheckIN</title>
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>  
    <link rel='stylesheet' href='/stylesheets/mystyle.css' />
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous"></script>
  </head>
  <body id='admin'>
  <header>
      <div class="header-title">
          <h1>Admin</h1>
      </div>
      <div class="header-button">
          <a href="/main">To the main page</a>
      </div>
  </header>
      <div class="container">
          <div class ="block"  id="teachers">
              <div class="block-header"><h2>Teachers</h2></div>
                <table>

                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Login</th>
                        <th>Email</th>
                        <th>Password</th>
                    </tr>
                    <% for (var i=0; i<teachers.length; i++) { %> 
                    <tr>
                        <td><%= teachers[i].ID %></td>
                        <td><%=teachers[i].Name %></td>
                        <td><%=teachers[i].Login %></td>
                        <td><%=teachers[i].Email %></td>
                        <td><%=teachers[i].Password %></td>
                    </tr>    
                    <% } %>
                </table>
                <form method="post" class="register-form col s3 m3 l3">
                    <div class="input-field col s3 m3 l3">
                        <input id="id" type="text" name="id" required placeholder="Id">
                        <!--<label for="id">ID</label>-->
                    </div>
                    <div class="input-field col s3 m3 l3">
                        <input id="name" type="text" name="name" required placeholder="Name">
                        <!--<label for="name">Name</label>-->
                    </div>
                    <div class="input-field col s3 m3 l3">
                        <input id="login" type="text" name="login" required placeholder="Login">
                        <!--<label for="login">Login</label>-->
                    </div>
                    <div class="input-field col s3 m3 l3">
                        <input class="validate" id="email" type="email" name="email" required placeholder="Email">
                        <!--<label for="email" data-error="wrong" data-success="ok">Email</label>-->
                    </div>
                    <div class="input-field col s3 m3 l3">
                        <input id="password" type="password" name="password" required placeholder="Password">
                        <!--<label for="password">Password</label>-->
                    </div>
                    <div class="sub">
                        <input class="btn waves-effect waves-light" type="submit" value="Add" formaction="/admin/addteacher">
                        <input class="btn waves-effect waves-light" type="submit" value="Delete" formaction="/admin/delteacher">
                    </div>
                
                </form>
            </div>
            <div class="block" id="lessons">
                <table>
                    <div class="block-header"><h2>Lessons</h2></div>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                    <% for (var j=0; j<lessons.length; j++) { %> 
                    <tr>
                        <td><%=lessons[j].ID %></td>
                        <td><%=lessons[j].Name %></td>
                    </tr>    
                    <% } %>
                </table>
                <form method="post" class="register-form col s3 m3 l3">
                    <div class="input-field col s3 m3 l3">
                        <input id="id" type="text" name="id" placeholder="Id">
                        <!--<label for="id">ID</label>-->
                    </div>
                    <div class="input-field col s3 m3 l3">
                        <input id="name" type="text" name="name" required placeholder="Name">
                        <!--<label for="name">Name</label>-->
                    </div>
                    <div class="sub">
                        <input class="btn waves-effect waves-light" type="submit" value="Add" formaction="/admin/addlesson">
                        <input class="btn waves-effect waves-light" type="submit" value="Delete" formaction="/admin/dellesson">
                    </div>
                
                </form>
            </div>   
            <div class="block" id="groups">
                <table>
                    <div class="block-header"><h2>Groups</h2></div>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Teacher ID</th>
                    </tr>
                    <% for (var k=0; k<groups.length; k++) { %> 
                    <tr>
                        <td><%=groups[k].ID %></td>
                        <td><%=groups[k].Name %></td>
                        <td><%=groups[k].Teacher_ID %></td>
                    </tr>    
                    <% } %>
                </table>
                <form method="post" class="register-form col s3 m3 l3">
                    <div class="input-field col s3 m3 l3">
                        <input id="id" type="text" name="id" required placeholder="Id">
                        <!--<label for="id">ID</label>-->
                    </div>
                    <div class="input-field col s3 m3 l3">
                        <input id="name" type="text" name="name" required placeholder="Name">
                        <!--<label for="name">Name</label>-->
                    </div>
                    <div class="input-field col s3 m3 l3">
                        <input id="name" type="text" name="teacherid" placeholder="Teacher Id">
                        <!--<label for="name">Teacher ID</label>-->
                    </div>
                    <div class="sub">
                        <input class="btn waves-effect waves-light" type="submit" value="Add" formaction="/admin/addgroup">
                        <input class="btn waves-effect waves-light" type="submit" value="Delete" formaction="/admin/delgroup">
                    </div>
                
                </form>
            </div>    
      </div> 
      <script>
        let message = '<%= message %>';
        $(document).ready(function() {
            switch(message) {
                case 'trueadd': 
                    alert('You have successfully added the data');
                    break;
                case 'truedel':
                    alert('You have successfully deleted the data');
                    break;
                case 'falseadd':
                    alert('You couldnt add the data');
                    break;
                case 'falseadd':
                    alert('You couldnt delete the data');
                    break;
            }
            message = "";
        })
      
      </script>
  </body>
</html>